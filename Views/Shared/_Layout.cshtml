    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TI400</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TI400.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"> </script>

    <style type="text/css">
        .btn-circle.btn-xl {
            background-color: red;
            width: 50px;
            height: 50px;
            padding: 13px 18px;
            border-radius: 60px;
            font-size: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PKX</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        

                        
                        <li class="dropdown">
                            <!-- DROP dos CRUDs -->
                            <button type="button" class="btn btn-group-sm dropdown-toggle" data-bs-toggle="dropdown">
                                CRUD´s
                            </button>
                            <ul class="dropdown-menu">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Atividades" asp-action="Index">Atividades</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Avencas" asp-action="Index">Avenças</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Cadastros" asp-action="Index">Cadastros</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">Categorias</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Estados" asp-action="Index">Estados</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Funcionarios" asp-action="Index">Funcionários</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Itens" asp-action="Index">Itens</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Linhaprocessos" asp-action="Index">Linhas de processos</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Movimentos" asp-action="Index">Movimentos</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Prioridades" asp-action="Index">Prioridades</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Processos" asp-action="Index">Processos</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tempos" asp-action="Index">Tempos</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tipos" asp-action="Index">Tipos</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="TipoMovimentos" asp-action="Index">Tipos de movimentos</a>

                            </ul>
                        </li>



                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sobre" asp-action="Index">Sobre</a>
                        </li>




                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">

            <h6 style="-webkit-transform: rotateY(180deg);-moz-transform: rotateY(180deg);
                    -o-transform: rotateY(180deg);-ms-transform: rotateY(180deg);
                    unicode-bidi: bidi-override;direction: rtl;margin: 0;display:inline-block;">
                &copy;
            </h6>
            <h6 style="margin: 0; display:inline-block;">
                2025 <img src="~/Icons/icon.ico" width="20" />

            </h6>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
